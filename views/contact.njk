{% extends "template.njk" %}

{% block head %}
    <link rel="stylesheet" href="/assets/govuk-frontend.min.css">
{% endblock %}

{% block content %}
<h1 class="govuk-heading-l">Contact Details</h1>
<form method="POST" action="/contact" class="govuk-form-group">
  <div class="govuk-form-group">
    <label class="govuk-label" for="fullName">Full Name:</label>
    <input class="govuk-input" type="text" id="fullName" name="fullName" required>
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="email">Email Address:</label>
    <input class="govuk-input" type="email" id="email" name="email" required>
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label" for="contactNumber">Contact Number:</label>
    <input class="govuk-input" type="tel" id="contactNumber" name="contactNumber" required>
  </div>

  <button class="govuk-button" type="submit">Submit</button>
</form>
{% endblock %}